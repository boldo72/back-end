<h1 class="titulo">juro simples</h1>

<form action="/juro_simples" method="post">
    <label for="capital">capital inicial (p):</label>
    <input type="number" name="capital" id="capital" placeholder="ex.: 1000" required>
    <br>
    <label for="taxa">taxa de juros (t):</label>
    <input type="number"  name="taxa" id="taxa" placeholder="ex.: 5" required>
    <br>
    <label for="tempo">tempo (n):</label>
    <input type="number"  name="tempo" id="tempo" placeholder="ex.: 12" required>
    <br>
    <button type="submit">calcular</button>
</form>


<%> if (typeof total !== 'undefined'){ %>
    <div class="resultado">
        <h2>resultado:</h2>
        <p>capital: R$ <%= capital %></p>
        <p>juro_simples: R$ <%= juros %></p>
        <p>total: R$ <%= total %></p>
    </div>
<% } %>










